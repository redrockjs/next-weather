{
  "name": "next-weather",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix .",
    "prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "@radix-ui/themes": "^2.0.2",
    "clsx": "^2.0.0",
    "next": "14.0.3",
    "next-images": "^1.8.5",
    "react": "^18",
    "react-dom": "^18",
    "react-use": "^17.4.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "typescript": "^5"
  }
}
